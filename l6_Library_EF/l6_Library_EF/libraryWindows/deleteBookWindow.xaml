<Window x:Class="l6_Library_EF.deleteBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:l6_Library_EF"
        mc:Ignorable="d"
        Title="Удаление книги" Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <UniformGrid Columns="1">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Выберите книгу из списка</TextBlock>
        <ComboBox Name="bookBox" VerticalAlignment="Center" Margin="30,0,30,0" SelectedValuePath ="Id" SelectionChanged="bookBox_SelectionChanged"/>
        <Button Name="deleteBook" Margin="10" Click="deleteBook_Click">Удалить</Button>
    </UniformGrid>
</Window>
