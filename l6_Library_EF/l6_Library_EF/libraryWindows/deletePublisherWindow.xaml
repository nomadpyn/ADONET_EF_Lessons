<Window x:Class="l6_Library_EF.deletePublisherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:l6_Library_EF"
        mc:Ignorable="d"
        Title="Удаление издателя" Height="150" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <UniformGrid Columns="1">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Выберите издателя из списка</TextBlock>
        <ComboBox Name="publisherBox" VerticalAlignment="Center" Margin="30,0,30,0" SelectedValuePath ="Id" SelectionChanged="publisherBox_SelectionChanged"/>
        <Button Name="deletePublisher" Margin="10" Click="deletePublisher_Click">Удалить</Button>
    </UniformGrid>
</Window>
