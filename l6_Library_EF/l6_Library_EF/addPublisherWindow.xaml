<Window x:Class="l6_Library_EF.addPublisherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:l6_Library_EF"
        mc:Ignorable="d"
        Title="Добавление издателя" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <UniformGrid Columns="1">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Введите название издателя</TextBlock>
        <TextBox Name="publName" VerticalAlignment="Center" Margin="30,0,30,0" TextAlignment="Center"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Введите адрес издателя</TextBlock>
        <TextBox Name="publAdress" VerticalAlignment="Center" Margin="30,0,30,0" TextAlignment="Center"/>
        <Button Name="addPubl" Margin="10" Click="addPubl_Click">Добавить</Button>
    </UniformGrid>
</Window>
