<Window x:Class="l6_Library_EF.addAuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:l6_Library_EF"
        mc:Ignorable="d"
        Title="Добавление автора" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <UniformGrid Columns="1">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Введите имя автора</TextBlock>
        <TextBox Name="authorName" VerticalAlignment="Center" Margin="30,0,30,0" TextAlignment="Center"/>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Введите фамилию автора</TextBlock>
        <TextBox Name="authorFname" VerticalAlignment="Center" Margin="30,0,30,0" TextAlignment="Center"/>
        <Button Name="addAuthor" Margin="10" Click="addAuthor_Click">Добавить</Button>
    </UniformGrid>
</Window>
