<Window x:Class="l5_LINQ_start.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:l5_LINQ_start"
        mc:Ignorable="d"
        Title="Продукты на складе" Height="450" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid Name="dataGrid" Grid.RowSpan="3" Grid.Column="0" Grid.Row="0" Margin="10"></DataGrid>
        <Button Name="addButton" Grid.Column="1" Grid.Row="0" Margin="5,50,5,50">Добавить данные</Button>
        <Button Name="selectByPriceButton" Grid.Column="1" Grid.Row="1" Margin="5,50,5,50">Выбрать по цене</Button>
        <Button Name="selectByCountButton" Grid.Column="1" Grid.Row="2" Margin="5,50,5,50">Выбрать по количеству</Button>
    </Grid>
</Window>
